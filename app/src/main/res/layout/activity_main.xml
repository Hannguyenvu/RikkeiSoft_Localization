<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanbeo.rikkeisoft_localization.MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnHaveFun"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/btnHaveFun" />

    <Button
        android:id="@+id/btnDoSomething"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/btnDoSomething" />

    <Button
        android:id="@+id/btnClickHere"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/btnClickHere" />

    <Button
        android:id="@+id/btnSurprise"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/btnSurprise" />

</LinearLayout>
